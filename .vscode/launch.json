{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run TS Code with Webpack",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/dist/bundle.js",
            "preLaunchTask": "build current file",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
    ]
}